{
  "first-header-h1": false,
  "first-line-h1": false,
  "line-length": {
    "code_blocks": false,
    "tables": false
  },
  "no-hard-tabs": {
    "code_blocks": false
  },
  "no-inline-html": {
    "allowed_elements": [
      "a",
      "blockquote",
      "br",
      "div",
      "em",
      "figcaption",
      "figure",
      "img",
      "p",
      "span",
      "strong",
      "ruby",
      "rt",
      "table",
      "td",
      "th",
      "thead",
      "tr"
    ]
  },
  "no-trailing-punctuation": {
    "punctuation": ",;"
  }
}
